/* pages/home/home.wxss */
.home-swiper{
  height: 360rpx;
  border-bottom: 10rpx solid rgba(218, 218, 218, 0.5)
}
.item{
  height: 100%;
}
.swiper-item{
  display: flex;
  flex-direction: column;
  height: 326rpx;
  border-radius: 4rpx;
  background: #f5f5f5;
  box-shadow: 0 2rpx 4rpx 0 rgba(153, 153, 153, 0.50);
  margin: 14rpx 12rpx
}

.order-type{
  color: #4825BF;
  font-size: 32rpx;
  padding-left: 48rpx;  
  padding-top: 24rpx;
  padding-bottom: 10rpx;
  border-bottom: 10rpx solid rgba(218, 218, 218, 0.5)
}

.order-oprate-type{
  font-size: 30rpx;
  padding-left: 48rpx;  
  color: #515151;
  margin-top: 20rpx;
 
}

.order-patient-info{
  font-size: 28rpx;
  padding-left: 48rpx;  
  color: #999999;
  margin-top: 10rpx;
}

.order-accept{
  align-self: flex-end;
  font-size: 24rpx;
  color: #515151;
  margin-top: 20rpx;
  margin-right: 38rpx;
}

.look-all-order{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background: white;
  height: 102rpx;
  line-height: 102rpx;
  border-bottom: 1rpx solid #eee;
}

.left-text{
  margin-left: 30rpx;
  font-size: 28rpx;
  color: #313131;
  
}

.right-text{
  margin-right: 30rpx;
  font-size: 28rpx;
  color: #999;
}

.img-style{
  width: 36rpx;
  height: 36rpx;
  align-self: center;
}

.next-step-style{
  width: 44rpx;
  height: 44rpx;
  align-self: center
}

.wait-order{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-left: 30rpx;
  padding-right: 30rpx;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
}

.wait-design{
  font-size: 24rpx;
  color: #999;
  margin-left: 14rpx;
  align-self: center;
}

.wait-other-order{
  font-size: 28rpx;
  color: #313131;
  margin-left: 50rpx;
}

.left-chirld-design{
  display: flex;
}

.order-img-type{
  width: 90rpx;
  height: 90rpx;
  align-self: center;
}

.order-type-item{
  width: 33%;
  display: flex;
  flex-direction: column;
  padding: 40rpx 0 20rpx 0;
  border-right: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
}

.all-order-type{
  display: flex;
  flex-wrap:wrap;
  margin: 0
}

.order-type-text{
  font-size: 24rpx;
  margin-top: 10rpx;
  color: #515151;
  align-self: center
}