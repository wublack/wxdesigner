/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.input-userid {
  padding-bottom: 10rpx;
  width: 80%;
  border-bottom: 2rpx solid blue;
}

.input-userid-placeholder {
  color: #dadada;
}

.input-password {
  padding-bottom: 10rpx;
  margin-top: 40rpx;
  width: 80%;
  border-bottom: 1px solid blue;
}

.userinfo::after {
  position: absolute;
  height: 1rpx;
  line-height: 1rpx;
  width: 80%;
  content: '';
  bottom: 0;
  background-color: 'red';
}

.login-line {
  height: 1rpx;
  line-height: 1rpx;
  width: 80%;
  background-color: '#f5f5f5';
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  width: 100%;
  display: flex;
  margin-top: 200px;
  align-items: center;
  flex-direction: column;
  text-align: center;
}

.user-motto {
  width: 80%;
  height: 98rpx;
  line-height: 98rpx;
  background: #dadada;
  border-radius: 4px;
  color: white;
  text-align: center;
}

.user-motto-hover {
  background: linear-gradient(135deg, rgba(152, 64, 235, 1), rgba(72, 37, 191, 1));
  box-shadow: 0px 4px 8px 0px rgba(72, 37, 191, 0.2);
}
