/* pages/orderdetail/orderdetail.wxss */

.order-detail-footer {
  position: fixed;
  display: flex;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  justify-content: center;
  background: linear-gradient(135deg, rgba(152, 64, 235, 1), rgba(72, 37, 191, 1));
  box-shadow: 0rpx 2rpx 4rpx 0rpx rgba(72, 37, 191, 0.2);
}

.order-detail-footer-text {
  color: white;
  font-size: 32rpx;
}

.order-detail-content {
  margin-bottom: 150rpx;
  background: #f5f5f5;
}

.order-detail-address {
  display: flex;
  flex-direction: column;
  height: 144rpx;
  padding-left: 40rpx;
  background: white;
}

.order-detail-address-name {
  font-size: 28rpx;
  color: #515151;
}

.order-detail-address-phone {
  font-size: 24rpx;
  color: #515151;
  margin-left: 20rpx;
}

.order-detail-address-detail-title {
  font-size: 20rpx;
  color: white;
  align-self: center;
}

.order-detail-address-detail {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}

.order-detail-address-row1 {
  margin-top: 28rpx;
}

.order-detail-address-row2 {
  display: flex;
  flex-direction: row;
}

.order-detail-address-row2-view {
  width: 92rpx;
  height: 36rpx;
  line-height: 36rpx;
  display: flex;
  justify-content: center;
  background: linear-gradient(135deg, rgba(152, 64, 235, 1), rgba(72, 37, 191, 1));
  border-radius: 8rpx;
}

.item{
  height: 100%;
}
.swiper-item{
  display: flex;
  flex-direction: column;
  height: 326rpx;
  border-radius: 4rpx;
  background: #f5f5f5;
  box-shadow: 0 2rpx 4rpx 0 rgba(153, 153, 153, 0.50);
  margin: 14rpx 12rpx
}

.order-type{
  color: #4825BF;
  font-size: 32rpx;
  padding-left: 48rpx;  
  padding-top: 24rpx;
  padding-bottom: 10rpx;
  border-bottom: 10rpx solid rgba(218, 218, 218, 0.5)
}

.order-oprate-type{
  font-size: 30rpx;
  padding-left: 48rpx;  
  color: #515151;
  margin-top: 20rpx;
 
}

.order-patient-info{
  font-size: 28rpx;
  padding-left: 48rpx;  
  color: #999999;
  margin-top: 10rpx;
}

.order-accept{
  align-self: flex-end;
  font-size: 24rpx;
  color: #515151;
  margin-top: 20rpx;
  margin-right: 38rpx;
}
